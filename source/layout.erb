<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>let blog: Blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
		<%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
		<%= stylesheet_link_tag "main.css" %>
	</head>
	<body>

		<header>
			<h1>
				<%= link_to "let blog = Blog()", "/" %>
			</h1>
		</header>

		<div id="main" role="main">
			<% if current_article %>
				<h1>
					<%= link_to current_article.title, current_article %>
				</h1>
			<% end %>
			<%= yield %>
			<% if current_article %>
				<span class="datestamp"><%= current_article.date.strftime('Posted on %B %d, %Y') %></span>
			<% end %>
		</div>

		<aside>
			<h3>Recent Articles</h2>
			<ol>
				<% blog.articles[0...10].each do |article| %>
					<li><%= link_to article.title, article %> <!-- <span>(<%= article.date.strftime('%B %e, %Y') %>)</span> --></li>
				<% end %>
			</ol>

		<!--
			<h3>Tags</h3>
			<ol>
				<% blog.tags.each do |tag, articles| %>
					<li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
				<% end %>
			</ol>
		-->

			<h3>By Year</h2>
			<ol>
				<% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
					<li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
				<% end %>
			</ol>
		</aside>
	</body>
</html>
